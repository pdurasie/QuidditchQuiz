                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/question_four_radio_four" />
                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- QUESTION 5-->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            style="@style/card_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/question_header_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_header_five" />

                <TextView
                    style="@style/question_body_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_five_body" />

                <CheckBox
                    android:id="@+id/question_five_check_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_five_check_one" />

                <CheckBox
                    android:id="@+id/question_five_check_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_five_check_two" />

                <CheckBox
                    android:id="@+id/question_five_check_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_five_check_three" />

                <CheckBox
                    android:id="@+id/question_five_check_four"
