        <!-- QUESTION 7-->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view7"
            style="@style/card_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/question_header_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_header_seven" />

                <TextView
                    style="@style/question_body_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_body" />

                <CheckBox
                    android:id="@+id/question_seven_check_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_check_one" />

                <CheckBox
                    android:id="@+id/question_seven_check_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_check_two" />

                <CheckBox
                    android:id="@+id/question_seven_check_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_check_three" />

                <CheckBox
                    android:id="@+id/question_seven_check_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_check_four" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn" />

    </LinearLayout>

</ScrollView>